Algoritmo "Calculadora"

Var

base, altura, area: real

Inicio

escreval ("CALCULADORA DE AREA DE RETANGULO!")
escreval("                           ")

escreval ("Digite a medida da base")
leia (base)

limpatela()

escreval ("Digite a medida da altura")
leia (altura)
 
area := base*altura
limpatela()

escreval ("A area do retangulo é :", area)
escreval ("Prontinho!")

Fimalgoritmo